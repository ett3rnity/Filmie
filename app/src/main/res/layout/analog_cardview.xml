<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="105dp"
    android:layout_height="197dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/analog_cardview"
    card_view:cardCornerRadius="2dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/analog_filmId"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="145dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/analog_filmPic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="#000000"
            android:id="@+id/analog_filmName"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"

            android:layout_below="@id/analog_filmPic"/>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/analog_ratingBar"
            style="@style/Widget.MaterialRatingBar.RatingBar.Small"
            android:maxHeight="40dp"
            android:maxWidth="100dp"
            android:layout_below="@id/analog_filmName"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>